{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": ["electron.vite.config.ts", "src/main/**/*", "src/preload/**/*", "src/shared/**/*"],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "tsBuildInfoFile": "node_modules/.cache/tsc/tsconfig.node.tsbuildinfo",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["src/shared/*"],
      "@core/*": ["src/main/core/*"],
      "@utils/*": ["src/main/utils/*"],
      "@windows/*": ["src/main/windows/*"]
    }
  }
}
